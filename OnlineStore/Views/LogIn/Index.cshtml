@model OnlineStore.Models.LoginVM
@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Online Store System</title>
    <link href="~/Content/bootswatch.css" rel="stylesheet" />
</head>
<body>

    <header>
        <h2 class="text-bg-primary align-items-center text-center">
            Online Store
        </h2>
        <div style="padding-top:150px;">

            <div class="container-fluid" style="height:400px;width:450px;padding-top:1%;">

                <form method="post" style="padding-bottom:5%;border:5px solid;padding:40px;border-radius:15px;border-color:darkorange">
                    <h4 class="text-bg-primary align-items-center text-center">Welcome to Online Store</h4>
                    <hr />
                    <h4 class="text-bg-danger"> @ViewData["msg"]</h4>

                    @using (Html.BeginForm("LogIn", "Index", FormMethod.Post, new { @class = "m-login__form m-form", @id = "signInForm" }))
                    {
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.Label("User Id", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.UserId, new { @class = "form-control", @placeholder = "User Id", autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div style="padding-top:8%;padding-bottom:5%" class="text-center">
                                <input type="submit" value="Login" class="btn btn-success" />
                            </div>

                            @*@Html.ValidationSummary()*@
                        </div>
                    }

                </form>
            </div>
        </div>
    </header>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
